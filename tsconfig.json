{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"],
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@repositories/*": ["repositories/*"]
    },
    "incremental": true
  }
}
